<?xml version="1.0" encoding="UTF-8"?>
<hdevelop file_version="1.2" halcon_version="18.11.3.0">
<procedure name="main">
<interface/>
<body>
<l>dev_update_off ()</l>
<l>dev_close_window ()</l>
<l>dev_open_window (0, 0, 512, 512, 'black', WindowHandle)</l>
<l>set_display_font (WindowHandle, 14, 'mono', 'true', 'false')</l>
<l>path := '/home/reidite/Dataset/PSA/images/cgc/'</l>
<l>img_names := ['3727258020','3727258028', '3727258038', '3727258070']</l>
<c></c>
<l>gen_empty_obj (panels)</l>
<l>for I := 0 to |img_names| - 1 by 1</l>
<l>    read_image (front, path + img_names[I] + '/front.jpg')</l>
<l>    read_image (back, path + img_names[I] + '/back.jpg')</l>
<l>    dev_resize_window_fit_image (front, 0, 0, -1, -1)</l>
<l>    rgb1_to_gray(front, gray_front)</l>
<l>    dev_display(gray_front)</l>
<l>    sobel_amp (gray_front, EdgeAmplitude, 'sum_sqrt_binomial', 3)</l>
<l>    binary_threshold (EdgeAmplitude, Region, 'max_separability', 'light', UsedThreshold)</l>
<l>    dev_display (Region)</l>
<l>    stop()</l>
<l>    smallest_rectangle1 (Region,Row1, Column1, Row2, Column2)</l>
<l>    height := Row2 - Row1</l>
<l>    width := Column2 - Column1</l>
<l>    margin := 0</l>
<l>    ROI_Row1 := Row1 + height*5/18 - margin</l>
<l>    ROI_Row2 := Row2 - height*1/18 + margin</l>
<l>    ROI_Column1 := Column1 + width*1/10 - margin</l>
<l>    ROI_Column2 := Column2 - width*1/10 + margin</l>
<l>    crop_rectangle1(front, ImagePart, ROI_Row1, ROI_Column1, ROI_Row2, ROI_Column2)</l>
<l>    dev_resize_window_fit_image (ImagePart, 0, 0, -1, -1)</l>
<l>    dev_display(ImagePart)</l>
<l>    rgb1_to_gray(ImagePart, gray_ImagePart)</l>
<l>*     smooth_image(gray_ImagePart,gray_ImagePart,'deriche2', 20)</l>
<l>    regiongrowing (gray_ImagePart, Regions, 3, 3, 6, 100)</l>
<l>    sobel_dir(gray_ImagePart,EdgeAmplitude1, EdgeDirection, 'sum_abs', 3)</l>
<l>    dev_display(EdgeAmplitude1)</l>
<l>    binary_threshold(EdgeAmplitude1,Region1, 'max_separability', 'light', UsedThreshold1)</l>
<l>    dev_display(Region1)</l>
<l>*     expand_gray (RegionHysteresis, gray_ImagePart, RegionHysteresis, RegionExpand, 'maximal', 'image', 32)</l>
<l>    stop()</l>
<l>    hough_line_trans(Region1,HoughImage, 4)</l>
<l>*     regiongrowing(HoughImage, Regions1, 3, 3, 6, 100)</l>
<l>    dev_clear_window()</l>
<l>    dev_display(HoughImage)</l>
<l>    stop()</l>
<c>    </c>
<l>endfor</l>
</body>
<docu id="main">
<parameters/>
</docu>
</procedure>
